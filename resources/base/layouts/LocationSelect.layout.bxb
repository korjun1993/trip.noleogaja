layout-macro-def (location-select) {
  params {
    param (location) {
      type (Location)
      min (Required) max (One)
    }
  }
  content {
    title-card{
      title-area{
        slot1{
          text("[#{value(location)}]")
        }
      }
      on-click{
        intent{
          goal : FestivalList
          value : $expr(location)
        }
      }
    }
  }
}